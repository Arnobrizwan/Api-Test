# Google Cloud Configuration
# Path to service account key file (for local development)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account-key.json

# Google Cloud Project ID
GCP_PROJECT_ID=your-project-id

# Optional: Set to "true" to disable Cloud Vision and use only Tesseract
USE_TESSERACT_ONLY=false

# Optional: Maximum file size in bytes (default: 10MB)
MAX_FILE_SIZE=10485760

# Optional: Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Cache Configuration
ENABLE_CACHE=true
CACHE_MAX_SIZE=100
CACHE_TTL_SECONDS=3600

# Rate Limiting (format: "requests/period" - e.g., "60/minute", "1000/hour")
RATE_LIMIT=60/minute
RATE_LIMIT_BATCH=10/minute
API_KEY=your-secret-api-key
